<Window x:Class="IntunePackagingTool.Dialogs.GroupMembersDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Group Members Management" 
        Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#F8FAFC">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="1" 
                                                Opacity="0.1" BlurRadius="4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F9FAFB"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#9CA3AF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3B82F6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <Border.Effect>
                                <DropShadowEffect Color="#3B82F6" Direction="270" ShadowDepth="2" 
                                                Opacity="0.25" BlurRadius="8"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2563EB"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#2563EB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Success Button Style -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#10B981"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <Border.Effect>
                                <DropShadowEffect Color="#10B981" Direction="270" ShadowDepth="2" 
                                                Opacity="0.25" BlurRadius="8"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#059669"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#059669"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#047857"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <Grid>
                                <ScrollViewer Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                <TextBlock Name="PlaceholderText" 
                                         Text="{TemplateBinding Tag}" 
                                         Foreground="#9CA3AF" 
                                         Margin="{TemplateBinding Padding}"
                                         IsHitTestVisible="False"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3B82F6"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                    <Condition Property="IsFocused" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Text" Value="">
                    <Setter Property="Foreground" Value="#9CA3AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Link Button Style -->
        <Style x:Key="LinkButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="32,24" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="1" 
                                Opacity="0.05" BlurRadius="8"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Name="GroupNameText" Text="Group Name" 
                               FontSize="24" FontWeight="Bold" Foreground="#111827"/>
                    <TextBlock Name="GroupTypeText" Text="Assignment Type" 
                               FontSize="14" Foreground="#6B7280" Margin="0,6,0,0"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Border Background="#EFF6FF" CornerRadius="12" Padding="8,4">
                            <TextBlock Name="MemberCountText" Text="0 Members" 
                                       FontSize="12" FontWeight="Medium" Foreground="#1D4ED8"/>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Name="AddDevicesButton" Content="✚ Add Devices" 
                            Style="{StaticResource PrimaryButton}" 
                            Margin="0,0,12,0"
                            Click="AddDevicesButton_Click"/>
                    <Button Name="RefreshButton" Content="↻ Refresh" 
                            Style="{StaticResource ModernButton}"
                            Click="RefreshButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Row="1">
            <!-- Members List -->
            <Border Background="White" Margin="24,20,24,20" CornerRadius="12"
                    BorderBrush="#E5E7EB" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" 
                                    Opacity="0.08" BlurRadius="16"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search Bar -->
                    <Border Grid.Row="0" Background="#FAFBFC" Padding="20,16" 
                            BorderBrush="#E5E7EB" BorderThickness="0,0,0,1"
                            CornerRadius="12,12,0,0">
                        <Grid>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Border Background="White" CornerRadius="8" BorderBrush="#D1D5DB" BorderThickness="1">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="1" 
                                                        Opacity="0.05" BlurRadius="4"/>
                                    </Border.Effect>
                                    <TextBox Name="SearchMembersBox" 
                                             Width="300"
                                             Style="{StaticResource ModernTextBox}"
                                             Tag="🔍 Search members..."
                                             TextChanged="SearchMembersBox_TextChanged"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Members DataGrid -->
                    <DataGrid Grid.Row="1" Name="MembersDataGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              GridLinesVisibility="None"
                              BorderThickness="0"
                              HeadersVisibility="Column"
                              SelectionMode="Extended"
                              RowHeight="52"
                              Background="White"
                              AlternatingRowBackground="#FAFBFC">

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F9FAFB"/>
                                <Setter Property="Foreground" Value="#374151"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="Padding" Value="16,12"/>
                                <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="16,8"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="" Width="50" 
                                                    Binding="{Binding IsSelected}"/>

                            <DataGridTextColumn Header="Device Name" Width="220" 
                                               Binding="{Binding DeviceName}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#111827"/>
                                        <Setter Property="FontSize" Value="14"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="User" Width="200" 
                                               Binding="{Binding UserPrincipalName}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#6B7280"/>
                                        <Setter Property="FontSize" Value="13"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="OS" Width="120" 
                                               Binding="{Binding OperatingSystem}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#6B7280"/>
                                        <Setter Property="FontSize" Value="13"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Status" Width="140">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                        <Setter Property="FontSize" Value="13"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsCompliant}" Value="True">
                                                <Setter Property="Text" Value="✓ Compliant"/>
                                                <Setter Property="Foreground" Value="#059669"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsCompliant}" Value="False">
                                                <Setter Property="Text" Value="⚠ Non-Compliant"/>
                                                <Setter Property="Foreground" Value="#DC2626"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Last Sync" Width="*" 
                                               Binding="{Binding LastSyncDateTime, StringFormat='{}{0:MMM dd, HH:mm}'}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#6B7280"/>
                                        <Setter Property="FontSize" Value="13"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn Header="" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Remove" 
                                                Click="RemoveMember_Click"
                                                Tag="{Binding}"
                                                Style="{StaticResource LinkButton}"
                                                Foreground="#EF4444"
                                                FontWeight="Medium"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Loading/Empty State -->
                    <Border Grid.Row="1" Name="LoadingPanel" 
                            Background="White" Visibility="Collapsed" CornerRadius="0,0,12,12">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ProgressBar IsIndeterminate="True" Width="200" Height="6" Margin="0,0,0,16"
                                        Foreground="#3B82F6" Background="#E5E7EB"/>
                            <TextBlock Text="Loading group members..." Foreground="#6B7280" FontSize="14"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1" Name="EmptyStatePanel" 
                            Background="White" Visibility="Collapsed" CornerRadius="0,0,12,12">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Border Background="#F3F4F6" Width="80" Height="80" CornerRadius="40" Margin="0,0,0,20">
                                <TextBlock Text="📱" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="No devices in this group" FontSize="18" FontWeight="SemiBold" Foreground="#374151"/>
                            <TextBlock Text="Click 'Add Devices' to assign devices to this group" 
                                      FontSize="14" Foreground="#6B7280" Margin="0,8,0,0" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="White" Padding="24,20" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="90" ShadowDepth="1" 
                                Opacity="0.05" BlurRadius="8"/>
            </Border.Effect>
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <Button Name="RemoveSelectedButton" Content="Remove Selected" 
                            Style="{StaticResource ModernButton}"
                            IsEnabled="False"
                            Click="RemoveSelectedButton_Click"/>
                    <Button Name="ExportButton" Content="📊 Export to CSV" 
                            Style="{StaticResource ModernButton}"
                            Margin="12,0,0,0"
                            Click="ExportButton_Click"/>
                </StackPanel>

                <Button Name="CloseButton" Content="Close" 
                        HorizontalAlignment="Right"
                        Style="{StaticResource ModernButton}"
                        Width="120"
                        Click="CloseButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>