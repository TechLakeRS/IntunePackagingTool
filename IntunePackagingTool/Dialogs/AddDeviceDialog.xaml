<Window x:Class="IntunePackagingTool.Dialogs.AddDeviceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Devices to Group" 
        Height="600" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="400"
        MinWidth="500">

    <Window.Resources>
        <!-- Styles are now in Themes/ModernTheme.xaml -->
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#007ACC" Padding="20">
            <StackPanel>
                <TextBlock Text="Add Devices to Group" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          Foreground="White"/>
                <TextBlock x:Name="GroupNameText" 
                          FontSize="14" 
                          Foreground="White" 
                          Opacity="0.9"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Input Section -->
        <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel Margin="20">
                <!-- Quick Add Section -->
                <TextBlock Text="Quick Add Device" 
                          FontSize="14" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="DeviceNameInput" 
                            Grid.Column="0"
                            FontSize="14"
                            Padding="10,8"
                            VerticalAlignment="Center"
                            KeyDown="DeviceNameInput_KeyDown">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="BorderBrush" Value="#CCCCCC"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="#007ACC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                        
                    </TextBox>

                    <!-- Placeholder text overlay -->
                    <TextBlock Grid.Column="0" 
                              Text="Enter device name (press Enter to add)" 
                              Foreground="#999999"
                              FontStyle="Italic"
                              Margin="12,0,0,0"
                              VerticalAlignment="Center"
                              IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text.Length, ElementName=DeviceNameInput, FallbackValue=0}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsFocused, ElementName=DeviceNameInput}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <Button x:Name="AddDeviceButton" 
                           Grid.Column="1"
                           Content="Add Device" 
                           Style="{StaticResource ModernButton}"
                           Click="AddDeviceButton_Click"/>

                </Grid>

                <!-- Progress indicator for adding -->
                <ProgressBar x:Name="AddingProgressBar" 
                            Height="3" 
                            IsIndeterminate="True"
                            Visibility="Collapsed"
                            Margin="0,5,0,0"/>

                <!-- Inline message panel -->
                <Border x:Name="InlineMessageBorder" 
                       Visibility="Collapsed"
                       Margin="0,10,0,0"
                       Padding="10"
                       CornerRadius="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="InlineMessageIcon" 
                                  Grid.Column="0"
                                  FontSize="16"
                                  Margin="0,0,10,0"
                                  VerticalAlignment="Center"/>
                        <TextBlock x:Name="InlineMessageText" 
                                  Grid.Column="1"
                                  TextWrapping="Wrap"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Bulk progress panel -->
                <Grid x:Name="BulkProgressPanel" Visibility="Collapsed" Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="BulkProgressText" Grid.Row="0" Margin="0,0,0,5"/>
                    <ProgressBar x:Name="BulkProgressBar" Grid.Row="1" Height="20"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Results Section -->
        <Grid Grid.Row="2">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ResultsPanel" Visibility="Collapsed" Margin="20">
                    <!-- Results header -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                  Text="Processing Results" 
                                  FontSize="14" 
                                  FontWeight="SemiBold"/>

                        <Button Grid.Column="1" 
                               x:Name="ClearResultsButton"
                               Content="Clear Results" 
                               Style="{StaticResource LinkButton}"
                               Click="ClearResultsButton_Click"/>
                    </Grid>

                    <!-- Results list -->
                    <ItemsControl ItemsSource="{Binding DeviceResults}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" 
                                       BorderThickness="0,0,0,1" 
                                       Padding="10,8"
                                       Margin="0,2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Status Icon -->
                                        <TextBlock Grid.Column="0" 
                                                  Text="{Binding StatusIcon}"
                                                  FontSize="16"
                                                  Foreground="{Binding StatusColor}"
                                                  VerticalAlignment="Center"/>

                                        <!-- Device Name -->
                                        <TextBlock Grid.Column="1" 
                                                  Text="{Binding DeviceName}"
                                                  FontWeight="SemiBold"
                                                  VerticalAlignment="Center"/>

                                        <!-- Message -->
                                        <TextBlock Grid.Column="2" 
                                                  Text="{Binding Message}"
                                                  Foreground="#666666"
                                                  VerticalAlignment="Center"/>

                                        <!-- Timestamp -->
                                        <TextBlock Grid.Column="3" 
                                                  Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}'}"
                                                  Foreground="#999999"
                                                  FontSize="11"
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>

            <!-- Empty state when no results -->
            <Border Visibility="Visible" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="💻" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
                    <TextBlock Text="Enter a device name above to add it to the group" 
                              Foreground="#999999"
                              FontSize="14"
                              Margin="0,10,0,0"
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="3" Background="#F8F8F8" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid Margin="20,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Summary -->
                <StackPanel x:Name="SummaryPanel" 
                           Grid.Column="0" 
                           Orientation="Horizontal" 
                           Visibility="Collapsed">
                    <TextBlock Text="✓" Foreground="Green" FontSize="16" Margin="0,0,10,0"/>
                    <TextBlock x:Name="SummaryText" VerticalAlignment="Center" Foreground="#333333"/>
                </StackPanel>

                <!-- Action buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="DoneButton" 
                           Content="Done" 
                           Style="{StaticResource ModernButton}"
                           MinWidth="80"
                           Click="DoneButton_Click"/>
                    <Button x:Name="CancelButton" 
                           Content="Cancel" 
                           Style="{StaticResource SecondaryButton}"
                           MinWidth="80"
                           Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>