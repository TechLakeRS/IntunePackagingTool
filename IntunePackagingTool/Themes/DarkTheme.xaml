<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Theme Colors -->
    <Color x:Key="BackgroundColor">#1E1E1E</Color>
    <Color x:Key="SurfaceColor">#2D2D30</Color>
    <Color x:Key="CardBackgroundColor">#252526</Color>
    <Color x:Key="SidebarBackgroundColor">#181818</Color>
    <Color x:Key="HeaderBackgroundColor">#2D2D30</Color>

    <Color x:Key="PrimaryColor">#007ACC</Color>
    <Color x:Key="PrimaryLightColor">#1BA1E2</Color>
    <Color x:Key="PrimaryDarkColor">#005A9E</Color>
    <Color x:Key="AccentColor">#0E7A0D</Color>

    <Color x:Key="TextPrimaryColor">#E4E4E4</Color>
    <Color x:Key="TextSecondaryColor">#969696</Color>
    <Color x:Key="TextDisabledColor">#5A5A5A</Color>

    <Color x:Key="BorderColor">#3F3F46</Color>
    <Color x:Key="BorderLightColor">#4A4A52</Color>
    <Color x:Key="DividerColor">#393939</Color>

    <Color x:Key="SuccessColor">#4EC9B0</Color>
    <Color x:Key="WarningColor">#CE9178</Color>
    <Color x:Key="ErrorColor">#F48771</Color>
    <Color x:Key="InfoColor">#569CD6</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{StaticResource SidebarBackgroundColor}"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{StaticResource HeaderBackgroundColor}"/>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabledColor}"/>

    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLightColor}"/>
    <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource DividerColor}"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>

    <!-- Sidebar Gradients for Dark Theme -->
    <LinearGradientBrush x:Key="SidebarGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#0D0D0D" Offset="0"/>
        <GradientStop Color="#1A1A1A" Offset="0.3"/>
        <GradientStop Color="#252525" Offset="0.7"/>
        <GradientStop Color="#1A1A1A" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SidebarBorderGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#007ACC" Offset="0"/>
        <GradientStop Color="#005A9E" Offset="0.5"/>
        <GradientStop Color="#003D6E" Offset="1"/>
    </LinearGradientBrush>

    <!-- Button Styles -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#3C3C3C"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#4A4A4A"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#2E2E2E"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#555555"/>

    <!-- TextBox Styles -->
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="#3F3F46"/>
    <SolidColorBrush x:Key="TextBoxFocusBorderBrush" Color="#007ACC"/>

    <!-- DataGrid Styles -->
    <SolidColorBrush x:Key="DataGridBackgroundBrush" Color="#252526"/>
    <SolidColorBrush x:Key="DataGridHeaderBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="DataGridRowHoverBrush" Color="#2A2A2D"/>
    <SolidColorBrush x:Key="DataGridAlternatingRowBrush" Color="#292929"/>
    <SolidColorBrush x:Key="DataGridGridLinesBrush" Color="#3F3F46"/>

    <!-- ScrollBar Styles -->
    <SolidColorBrush x:Key="ScrollBarBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="ScrollBarThumbBrush" Color="#686868"/>
    <SolidColorBrush x:Key="ScrollBarThumbHoverBrush" Color="#9E9E9E"/>

</ResourceDictionary>