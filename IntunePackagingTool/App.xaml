<Application x:Class="IntunePackagingTool.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Base styles must be loaded first -->
                <ResourceDictionary Source="/IntunePackagingTool;component/Themes/ModernTheme.xaml"/>
                <!-- Theme will be loaded dynamically by ThemeService -->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>