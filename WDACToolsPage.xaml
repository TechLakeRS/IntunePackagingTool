<Page x:Class="IntunePackagingTool.WDACToolsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IntunePackagingTool"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="WDACToolsPage">

    <!-- WDACToolsPage.xaml -->
    <Grid Name="WDACTools" Visibility="Collapsed">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Quick Actions -->
        <Border Grid.Row="0" Style="{StaticResource ModernCard}" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="🔒 WDAC Catalog Tools" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                <WrapPanel>
                    <Button Content="📁 Generate from Folder" 
                        Style="{StaticResource ModernButton}" 
                        Margin="0,0,10,10" Width="200"
                        Click="GenerateFromFolder_Click"/>

                    <Button Content="📦 Batch Process Packages" 
                        Style="{StaticResource ModernButton}"
                        Margin="0,0,10,10" Width="200"
                        Click="BatchProcess_Click"/>

                    <Button Content="✅ Validate Existing Catalogs" 
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,10,10" Width="200"
                        Click="ValidateCatalogs_Click"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- Queue/Results -->
        <Border Grid.Row="1" Style="{StaticResource ModernCard}">
            <DataGrid Name="CatalogQueueGrid" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected}" Width="60"/>
                    <DataGridTextColumn Header="Application" Binding="{Binding AppName}" Width="200"/>
                    <DataGridTextColumn Header="Version" Binding="{Binding Version}" Width="100"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="150"/>
                    <DataGridTextColumn Header="Catalog File" Binding="{Binding CatalogPath}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
