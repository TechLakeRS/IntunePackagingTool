<Window x:Class="IntunePackagingTool.Dialogs.ApplicationUpdateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Application" 
        Height="650" Width="750"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <Grid>
                <TextBlock FontSize="16" FontWeight="SemiBold" Foreground="White">
                    Update Application: <Run Name="HeaderAppName" Text="Application Name"/>
                </TextBlock>
                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" 
                           Foreground="White" Opacity="0.9">
                    Current Version: <Run Name="HeaderVersion" Text="1.0.0"/>
                </TextBlock>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Basic Information Section -->
                <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" 
                        Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Basic Information" FontWeight="Bold" 
                                   FontSize="14" Margin="0,0,0,10" Foreground="#333"/>

                        <!-- Display Name -->
                        <Label Content="Display Name:" FontWeight="SemiBold"/>
                        <TextBox Name="DisplayNameTextBox" Margin="0,0,0,10" Padding="8"
                                 BorderBrush="#CCCCCC" BorderThickness="1"/>

                        <!-- Description -->
                        <Label Content="Description:" FontWeight="SemiBold"/>
                        <TextBox Name="DescriptionTextBox" Height="80" TextWrapping="Wrap" 
                                 AcceptsReturn="True" Margin="0,0,0,10" Padding="8"
                                 VerticalScrollBarVisibility="Auto"
                                 BorderBrush="#CCCCCC" BorderThickness="1"/>

                        <!-- Category -->
                        <Label Content="Category:" FontWeight="SemiBold"/>
                        <ComboBox Name="CategoryComboBox" IsEditable="True" Margin="0,0,0,10" Padding="8">
                            
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Package Update Section -->
                <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" 
                        Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Package Update (Optional)" FontWeight="Bold" 
                                   FontSize="14" Margin="0,0,0,10" Foreground="#333"/>

                        <Label Content="Select New Package:"/>
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Name="PackagePathTextBox" IsReadOnly="True" 
                                     Margin="0,0,5,0" Padding="8" BorderBrush="#CCCCCC" 
                                     BorderThickness="1"/>
                            <Button Grid.Column="1" Content="Browse..." 
                                    Click="BrowsePackageButton_Click" Padding="8"/>
                        </Grid>
                        <TextBlock Text="Supports: .exe, .msi, or existing .intunewin file" 
                                   Foreground="Gray" FontSize="11" FontStyle="Italic"/>
                    </StackPanel>
                </Border>

                <!-- Icon Update Section -->
                <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" 
                        Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Application Icon (Optional)" FontWeight="Bold" 
                                   FontSize="14" Margin="0,0,0,10" Foreground="#333"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icon Preview -->
                            <Border Grid.Column="0" Width="64" Height="64" 
                                    BorderBrush="#CCCCCC" BorderThickness="1"
                                    Background="#F5F5F5" CornerRadius="4" Margin="0,0,15,0">
                                <Image Name="IconPreview" Width="48" Height="48" 
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                            </Border>

                            <!-- Icon Path -->
                            <StackPanel Grid.Column="1">
                                <Label Content="Select Icon File:"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" Name="IconPathTextBox" IsReadOnly="True" 
                                             Margin="0,0,5,0" Padding="8" BorderBrush="#CCCCCC" 
                                             BorderThickness="1"/>
                                    <Button Grid.Column="1" Content="Browse..." 
                                            Click="BrowseIconButton_Click" Padding="8"/>
                                </Grid>
                                <TextBlock Text="Recommended: 512x512 PNG or JPG" 
                                           Foreground="Gray" FontSize="11" FontStyle="Italic" 
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Detection Rules Section -->
                <Expander Header="Detection Rules Configuration" Margin="0,0,0,15">
                    <Expander.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontWeight="Bold" 
                                       FontSize="14" Foreground="#333"/>
                        </DataTemplate>
                    </Expander.HeaderTemplate>

                    <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" 
                            Padding="15" Margin="0,5,0,0">
                        <StackPanel>
                            <!-- Detection Type Selection -->
                            <Label Content="Detection Rule Type:" FontWeight="SemiBold"/>
                            <ComboBox Name="DetectionTypeCombo" Margin="0,0,0,15" Padding="8"
                                      SelectionChanged="DetectionTypeCombo_SelectionChanged">
                                <ComboBoxItem Tag="File">File or Folder Exists</ComboBoxItem>
                                <ComboBoxItem Tag="Registry">Registry Key/Value</ComboBoxItem>
                                <ComboBoxItem Tag="MSI">MSI Product Code</ComboBoxItem>
                                <ComboBoxItem Tag="Script">Custom Script</ComboBoxItem>
                            </ComboBox>

                            <!-- File Detection Panel -->
                            <StackPanel Name="FileDetectionPanel" Visibility="Collapsed">
                                <Label Content="File or Folder Path:"/>
                                <TextBox Name="FilePathTextBox" Margin="0,0,0,10" Padding="8"
                                         BorderBrush="#CCCCCC" BorderThickness="1"
                                         Text="%ProgramFiles%\YourApp\app.exe"/>

                                <Label Content="Detection Method:"/>
                                <ComboBox Name="FileDetectionMethodCombo" Margin="0,0,0,10" Padding="8">
                                    <ComboBoxItem IsSelected="True">File or folder exists</ComboBoxItem>
                                    <ComboBoxItem>Date modified</ComboBoxItem>
                                    <ComboBoxItem>Date created</ComboBoxItem>
                                    <ComboBoxItem>Version</ComboBoxItem>
                                    <ComboBoxItem>Size in MB</ComboBoxItem>
                                </ComboBox>

                                <Label Content="Version/Value (if applicable):"/>
                                <TextBox Name="FileVersionTextBox" Margin="0,0,0,10" Padding="8"
                                         BorderBrush="#CCCCCC" BorderThickness="1"/>

                                <CheckBox Name="Check32BitOn64SystemFile" 
                                          Content="Check in 32-bit registry on 64-bit systems"
                                          Margin="0,5,0,0"/>
                            </StackPanel>

                            <!-- Registry Detection Panel -->
                            <StackPanel Name="RegistryDetectionPanel" Visibility="Collapsed">
                                <Label Content="Registry Hive:"/>
                                <ComboBox Name="RegistryHiveCombo" Margin="0,0,0,10" Padding="8">
                                    <ComboBoxItem>HKEY_LOCAL_MACHINE</ComboBoxItem>
                                    <ComboBoxItem>HKEY_CURRENT_USER</ComboBoxItem>
                                    <ComboBoxItem>HKEY_USERS</ComboBoxItem>
                                    <ComboBoxItem>HKEY_CURRENT_CONFIG</ComboBoxItem>
                                    <ComboBoxItem>HKEY_CLASSES_ROOT</ComboBoxItem>
                                </ComboBox>

                                <Label Content="Registry Key Path (without hive):"/>
                                <TextBox Name="RegistryKeyTextBox" Margin="0,0,0,10" Padding="8"
                                         BorderBrush="#CCCCCC" BorderThickness="1"
                                         Text="SOFTWARE\YourCompany\YourApp"/>

                                <Label Content="Value Name (optional):"/>
                                <TextBox Name="RegistryValueNameTextBox" Margin="0,0,0,10" Padding="8"
                                         BorderBrush="#CCCCCC" BorderThickness="1"/>

                                <Label Content="Detection Method:"/>
                                <ComboBox Name="RegistryDetectionMethodCombo" Margin="0,0,0,10" Padding="8">
                                    <ComboBoxItem IsSelected="True">Key exists</ComboBoxItem>
                                    <ComboBoxItem>Value exists</ComboBoxItem>
                                    <ComboBoxItem>String comparison</ComboBoxItem>
                                    <ComboBoxItem>Integer comparison</ComboBoxItem>
                                    <ComboBoxItem>Version comparison</ComboBoxItem>
                                </ComboBox>

                                <Label Content="Expected Value (if applicable):"/>
                                <TextBox Name="RegistryValueTextBox" Margin="0,0,0,10" Padding="8"
                                         BorderBrush="#CCCCCC" BorderThickness="1"/>

                                <CheckBox Name="Check32BitOn64SystemRegistry" 
                                          Content="Check in 32-bit registry on 64-bit systems"
                                          Margin="0,5,0,0"/>
                            </StackPanel>

                            <!-- MSI Detection Panel -->
                            <StackPanel Name="MSIDetectionPanel" Visibility="Collapsed">
                                <Label Content="MSI Product Code:"/>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" Name="MSIProductCodeTextBox" Padding="8"
                                             BorderBrush="#CCCCCC" BorderThickness="1"
                                             Text=""/>
                                    <Button Grid.Column="1" Content="Auto-Detect" 
                                            Margin="5,0,0,0" Padding="8,5"
                                            Name="AutoDetectMSIButton" 
                                            Click="AutoDetectMSIButton_Click"/>
                                </Grid>

                                <Label Content="Version Comparison:"/>
                                <ComboBox Name="MSIVersionOperatorCombo" Margin="0,0,0,10" Padding="8">
                                    <ComboBoxItem IsSelected="True">Equals</ComboBoxItem>
                                    <ComboBoxItem>Not equal to</ComboBoxItem>
                                    <ComboBoxItem>Greater than</ComboBoxItem>
                                    <ComboBoxItem>Greater than or equal</ComboBoxItem>
                                    <ComboBoxItem>Less than</ComboBoxItem>
                                    <ComboBoxItem>Less than or equal</ComboBoxItem>
                                </ComboBox>

                                <Label Content="Product Version:"/>
                                <TextBox Name="MSIProductVersionTextBox" Margin="0,0,0,10" Padding="8"
                                         BorderBrush="#CCCCCC" BorderThickness="1"/>
                            </StackPanel>

                            <!-- Script Detection Panel -->
                            <StackPanel Name="ScriptDetectionPanel" Visibility="Collapsed">
                                <Label Content="Detection Script:"/>
                                <TextBox Name="ScriptContentTextBox" Height="150" 
                                         TextWrapping="Wrap" AcceptsReturn="True" 
                                         FontFamily="Consolas" FontSize="12"
                                         Margin="0,0,0,10" Padding="8"
                                         VerticalScrollBarVisibility="Auto"
                                         BorderBrush="#CCCCCC" BorderThickness="1"/>
                                <TextBlock Text="PowerShell script should exit with code 0 if app is detected" 
                                           Foreground="Gray" FontSize="11" FontStyle="Italic"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Expander>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#F5F5F5" BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0" Padding="15">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                    <TextBlock Name="StatusText" Foreground="#666" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Name="UpdateButton" Content="Update Application" Width="130" 
                            Margin="0,0,10,0" Click="UpdateButton_Click"
                            Background="#2196F3" Foreground="White" 
                            Padding="10,8" FontWeight="Medium">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="3">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Name="CancelButton" Content="Cancel" Width="80" 
                            Click="CancelButton_Click" Padding="10,8">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#E0E0E0" CornerRadius="3">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>